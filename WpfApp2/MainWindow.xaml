<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EasySave v2.0" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="205*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="153*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="190*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="170*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="0"
            FontSize="16"
            VerticalAlignment="Center"
            Foreground="White"
            Text="Easy Save 2.0" Grid.Row="0"/>

        <TextBlock
            Grid.Column="1"
            TextAlignment="Left"
            Foreground="White"
            Grid.Row="2" Height="42" Grid.RowSpan="2" VerticalAlignment="Bottom"><Run/><LineBreak/><Run Text="Backup Jobs:"/></TextBlock>


        <Button
                Foreground="White"
                Content="Create a new Backup Job" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="2" Grid.Column="1" />

        <Button
                Foreground="White"
                Content="Launch an Existing Backup Job" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="2" Grid.Column="3" />

        <Button
                Foreground="White"
                Content="Launch all existing Backup Job" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="2" Grid.Column="5"/>

        <DataGrid Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="5"/>

    </Grid>

</Window>
