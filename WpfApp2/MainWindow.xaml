<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="EasySave v2.0" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/8c685fdc6087e7ac6e8722d8221f8406.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="179*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="539*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*" />
            <RowDefinition Height="58*" />
            <RowDefinition Height="271*"/>
            <RowDefinition Height="50*" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>


        <Border Grid.Column="0" x:Name="NavigationMenu" BorderThickness="1" BorderBrush="Black" Grid.RowSpan="4" Grid.ColumnSpan="3" >
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FF9CA5FE" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <DockPanel LastChildFill="False"/>
        </Border>
        <Border BorderThickness="1" BorderBrush="Black"  Background="#FF5238C7" Grid.ColumnSpan="3">
            <Rectangle HorizontalAlignment="Left" Height="32" Margin="14,0,0,0" Stroke="#FF5238C7" VerticalAlignment="Center" Width="38">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/1024px-Hamburger_icon_white.svg.png"/>
                </Rectangle.Fill>
            </Rectangle>
        </Border>
        <Menu Grid.Column="1"  Grid.Row="2" />
        
    </Grid>
</Window>
