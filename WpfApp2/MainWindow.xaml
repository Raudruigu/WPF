<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EasySave v2.0" Height="450" Width="800">
    <Grid x:Name="Main" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="205*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="180*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="175*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="170*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                FontSize="16"
                VerticalAlignment="Top"
                Foreground="White"
                Text="Easy Save 2.0" Height="21" Margin="0,1,0,0"/>

            <TextBlock
                Grid.Column="1"
                TextAlignment="Left"
                Foreground="White"
                Grid.Row="3" Height="55" VerticalAlignment="Center"><Run/><LineBreak/><Run Text="Backup Jobs:"/></TextBlock>





            <Button x:Name="Create"
                    Foreground="White"
                    Content="Create a new Backup Job" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="2" Grid.Column="1" Margin="0,10,0,0" FontFamily="Arial" FontSize="14" UseLayoutRounding="True" Cursor="Hand" Click="BtnClickCreate" >
            </Button>

            <Button
                    Foreground="White"
                    Content="Launch an Existing Backup Job" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="2" Grid.Column="3" Margin="0,10,0,0" />

            <Button
                    Foreground="White"
                    Content="Launch all existing Backup Job" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="2" Grid.Column="5" Margin="0,10,0,0"/>

            <DataGrid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="5" Margin="0,55,0,28" Grid.RowSpan="3"/>

        
    </Grid>

</Window>
