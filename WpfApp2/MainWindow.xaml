<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EasySave v2.0" Height="450" Width="800">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/8c685fdc6087e7ac6e8722d8221f8406.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="205*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <TextBlock
                Grid.Column="0"
                FontSize="16"
                Foreground="Black"
                Text="Easy Save 2.0" Grid.Row="0"/>

        <TextBlock
                Grid.Column="1"
                TextAlignment="Left"
                Foreground="Black"
                Grid.Row="3" Height="55" VerticalAlignment="Center"><Run/><LineBreak/><Run Text="Backup Jobs:"/></TextBlock>
        <Button
                    Foreground="Black"
                    Content="Create a new Backup Job" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="1" Grid.Column="1" Margin="0,56,0,0" FontFamily="Arial" FontSize="14" UseLayoutRounding="True" Cursor="Hand" TextBlock.Foreground="Black" Grid.RowSpan="2" Click="ClickButtonCreate" >
        </Button>

        <Button
                    Foreground="Black"
                    Content="Launch an Existing Backup Job" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="1" Grid.Column="3" Margin="0,56,0,0" TextBlock.Foreground="Black" Grid.RowSpan="2" />

        <Button
                    Foreground="Black"
                    Content="Launch all existing Backup Job" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="1" Grid.Column="5" Margin="0,56,0,0" TextBlock.Foreground="Black" Grid.RowSpan="2"/>

        <DataGrid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="5" Margin="0,55,0,28" Grid.RowSpan="3"/>

        <Button
            Foreground="Black"
            Content="Settings" Background="{x:Null}" BorderBrush="{x:Null}" Grid.Row="0" Grid.Column="7" TextBlock.Foreground="Black" Click="BtnClickSettings"/>
        
       
        <Frame x:Name="Main" Grid.ColumnSpan="7" Grid.RowSpan="6"/>
    </Grid>

</Window>
